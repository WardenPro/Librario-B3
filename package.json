{
    "name": "librario-b3",
    "private": true,
    "packageManager": "yarn@4.5.0",
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "build": "cd frontend && yarn build && cd ../backend && yarn build",
        "deploy": "yarn build && cd backend && yarn start && cd ../frontend && yarn start",
        "static": "eslint backend/",
        "stylecheck": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json}'",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json}' '!db/**'"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}
