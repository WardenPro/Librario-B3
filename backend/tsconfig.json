{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "dist/",
        "target": "ES2022",
        "module": "commonjs",
        "lib": ["ES2022", "DOM"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "drizzle.config.ts", "custom.d.ts"],
    "exclude": ["**/*.test.ts"]
}
